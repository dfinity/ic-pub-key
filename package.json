{
	"name": "@dfinity/ic-pub-key",
	"version": "1.0.1",
	"type": "module",
	"main": "index.js",
	"publishConfig": {
		"access": "public"
	},
	"bin": {
		"ic-pub-key": "./dist/main.js"
	},
	"scripts": {
		"format": "npm run format:js && npm run format:github && npm run format:rs",
		"format:check": "npm run format:js:check && npm run format:github:check && npm run format:rs:check",
		"format:js": "prettier --write './**/*.{ts,js,mjs,json,scss,css,html,md,yml}'",
		"format:js:check": "prettier --check './**/*.{ts,js,mjs,json,scss,css,html,md,yml}'",
		"format:github": "prettier --write './.github/**/*.{yml,yaml}'",
		"format:github:check": "prettier --check './.github/**/*.{yml,yaml}'",
		"format:rs": "cargo fmt",
		"format:rs:check": "cargo fmt --check",
		"lint": "eslint . --ext .ts,.js,.tsx,.jsx",
		"lint:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix",
		"build": "tsc && chmod +x dist/main.js",
		"test": "npm run build && vitest run",
		"test:watch": "npm run build && vitest",
		"test:coverage": "vitest run --coverage",
		"test:coverage:report": "vitest run --coverage --reporter=html",
		"start": "node dist/main.js",
		"update-version": "vite-node ./scripts/update-version.ts"
	},
	"keywords": [
		"internet computer",
		"internet-computer",
		"Internet Computer",
		"ic",
		"dfinity",
		"cryptography",
		"library"
	],
	"author": "DFINITY Stiftung",
	"license": "ISC",
	"description": "Library for deriving public keys for threshold signature schemes used on the Internet Computer",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dfinity/ic-pub-key.git"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.29.0",
		"@types/commander": "^2.12.0",
		"@types/node": "^24.0.7",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.39.1",
		"eslint-plugin-import": "^2.32.0",
		"prettier": "^3.6.0",
		"prettier-plugin-organize-imports": "^4.3.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vite-node": "^5.3.0",
		"vitest": "^3.2.4",
		"zod": "^4.0.5"
	},
	"dependencies": {
		"@dfinity/principal": "^3.2.4",
		"@dfinity/utils": "^3.0.1",
		"@noble/ed25519": "^2.3.0",
		"@noble/hashes": "^1.8.0",
		"@noble/secp256k1": "^3.0.0",
		"bitcoinjs-lib": "^6.1.7",
		"commander": "^14.0.0",
		"ethers": "^6.16.0"
	},
	"engines": {
		"node": ">=24",
		"npm": ">=11.5.1 <12.0.0"
	}
}
